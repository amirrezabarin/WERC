                            </a>

                            <ul class="dropdown-menu">

                                <li>
                                    <a href="/receipt/receiptList">
                                        <i class="fa fa-list-ol fa-1x" aria-hidden="true"></i>
                                        <span class="">@Model["Receipt List"] </span>

@using Model.ViewModels.Task
@model  VmTaskCollection

@foreach (var item in Model.TaskList)
{
    <div class="col-xs-12 col-sm-12 col-md-6 card ui-draggable ui-draggable-handle" id="@item.Id">
        <div class="margin-div dropped-select-item-hihghlight">
            <div id="dragedImageDiv" class="col-xs-12 col-sm-12 col-md-4">
                <div class="row">
                    <img src="@item.ImageUrl" class="img-responsive item-image" />
                </div>
            </div>

            <div class="card-detail col-xs-12 col-sm-12 col-md-8">
                <div class="card-item-detail">
                    <span for="Name" class="card-item-detail-label">@Model["Name"]:</span>
                    <span id="Name" name="Name" class="card-item-detail-value"> @item.Name </span>
                </div>
            </div>
            <p id="removeSection" class="col-xs-12 text-right operation-key-bottom">
                <button type='button' id="@item.Id" class='btn btn-danger btn-sm btn-delete remove-draged-item-img' title="@Model["Delete"]" onclick='showDroppedDeleteItemConfirmDialog(this)'></button>
            </p>
        </div>
    </div>
}
